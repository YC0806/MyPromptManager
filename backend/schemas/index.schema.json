{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://promptmanager.local/schemas/index.schema.json",
  "title": "Prompt Manager Index",
  "description": "JSON Schema for index.json cache file",
  "type": "object",
  "required": ["prompts", "templates", "chats"],
  "properties": {
    "prompts": {
      "type": "array",
      "description": "List of indexed prompts",
      "items": {
        "$ref": "#/definitions/IndexEntry"
      }
    },
    "templates": {
      "type": "array",
      "description": "List of indexed templates",
      "items": {
        "$ref": "#/definitions/IndexEntry"
      }
    },
    "chats": {
      "type": "array",
      "description": "List of indexed chats",
      "items": {
        "$ref": "#/definitions/IndexEntry"
      }
    },
    "last_updated": {
      "type": "string",
      "description": "Last index update timestamp",
      "format": "date-time"
    },
    "last_error": {
      "description": "Last index error message (if any)",
      "type": ["string", "null"]
    }
  },
  "definitions": {
    "IndexEntry": {
      "type": "object",
      "required": ["id", "title", "file_path"],
      "properties": {
        "id": {
          "type": "string",
          "description": "ULID identifier",
          "pattern": "^[0-9A-HJKMNP-TV-Z]{26}$"
        },
        "type": {
          "type": "string",
          "description": "Resource type",
          "enum": ["prompt", "template", "chat"]
        },
        "title": {
          "type": "string",
          "description": "Prompt/template title"
        },
        "description": {
          "type": "string",
          "description": "Brief description"
        },
        "slug": {
          "type": "string",
          "description": "URL-friendly identifier"
        },
        "labels": {
          "type": "array",
          "description": "Classification labels",
          "items": {
            "type": "string"
          }
        },
        "author": {
          "type": "string",
          "description": "Author name"
        },
        "created_at": {
          "type": "string",
          "description": "Creation timestamp",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "description": "Last update timestamp",
          "format": "date-time"
        },
        "file_path": {
          "type": "string",
          "description": "Relative path in repository"
        },
        "sha": {
          "type": "string",
          "description": "Git blob SHA"
        },
        "version_count": {
          "type": "integer",
          "description": "Number of versions for prompt/template"
        },
        "head_version_id": {
          "type": ["string", "null"],
          "description": "Current HEAD version id"
        },
        "head_version_number": {
          "type": ["string", "null"],
          "description": "Current HEAD version number"
        },
        "provider": {
          "type": ["string", "null"],
          "description": "Chat provider (for chat entries)"
        },
        "model": {
          "type": ["string", "null"],
          "description": "Chat model (for chat entries)"
        },
        "conversation_id": {
          "type": ["string", "null"],
          "description": "Provider conversation id (for chat entries)"
        },
        "turn_count": {
          "type": "integer",
          "description": "Number of user turns (for chat entries)"
        }
      }
    }
  }
}
